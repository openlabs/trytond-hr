            <field name="model">company.employee.staff_details</field>
            <field name="type">form</field>
            <field name="name">employee_staff_details_form</field>
        </record>
        <record model="ir.action.act_window" id="act_staff_details_form">
            <field name="name">Staff Details</field>
            <field name="res_model">company.employee.staff_details</field>
        </record>
        <record model="ir.action.act_window.view" id="act_staff_details_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="staff_details_view_list"/>
            <field name="act_window" ref="act_staff_details_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_staff_details_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="staff_details_view_form"/>
            <field name="act_window" ref="act_staff_details_form"/>
        </record>
        <menuitem parent="company.menu_employee_form" sequence="30"
            action="act_staff_details_form" id="menu_staff_details_form"/>

        <record model="ir.ui.view" id="language_view_list">
